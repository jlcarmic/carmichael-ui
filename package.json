    "eslint-plugin-react-hooks": "^2.0.1",
    "jest": "^24.9.0",
    "jsdom": "^15.1.1",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
